<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pnMain" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxprac.LoginController" stylesheets="@hello.css">
   <children>
      <VBox fx:id="pnHome" alignment="CENTER" prefHeight="240.0" prefWidth="259.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <GridPane fx:id="pnLogin" prefHeight="158.0" prefWidth="228.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints maxHeight="62.0" minHeight="10.0" prefHeight="62.0" vgrow="SOMETIMES" />
             <RowConstraints maxHeight="76.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES" />
             <RowConstraints maxHeight="91.0" minHeight="10.0" prefHeight="49.0" valignment="CENTER" vgrow="SOMETIMES" />
               <RowConstraints />
               <RowConstraints />
           </rowConstraints>
            <children>
      
                <Label fx:id="welcomeText" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                  <font>
                     <Font name="Complex_IV50" size="42.0" />
                  </font></Label>
      
                <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <font>
                     <Font name="Arial Black" size="12.0" />
                  </font></Label>
                <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                  <font>
                     <Font name="Arial Black" size="12.0" />
                  </font></Label>
                <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
                <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <Button onAction="#onSignInClick" text="Sign In" textFill="#722929" />
                </HBox>
            </children>
      
      
         </GridPane>
          <Text fx:id="actiontarget" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
      </VBox>
   </children>
</AnchorPane>
